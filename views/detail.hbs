{{#with restaurant}}
<h1 class="mb-1 restaurant-show-title">{{name}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">

      {{> flash-msg success_msg=../success_msg err_msg=../err_msg}}

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{location}}
        <a href="{{google_map}}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{phone}}
      </p>

      <p class="mb-5">
        {{description}}
      </p>

      <img class="rounded mx-auto d-block mb-5 w-100" src="{{image}}" alt="{{name}}" style="max-width: 600px;">

      <div class="d-flex justify-content-start mb-3">

        <div class="me-2">
          <a href="/restaurants/{{id}}/edit">
            <button type="button" class="btn btn-light">編輯此頁</button>
          </a>
        </div>

        <div class="me-2">
          <a href="/restaurants/{{id}}/delete-confirm">
            <button type="button" class="btn btn-danger">刪除</button>
          </a>
        </div>

      </div>


    </div>
  </div>
</div>
{{/with}}