{{#if success_msg}}
<div class="container mt-3">
    <div class="alert alert-success" role="alert">
        {{#if delete_restaurant_name}}
            {{success_msg}} {{delete_restaurant_name}}
        {{else}}
            {{success_msg}}
        {{/if}}
    </div>
</div>
{{/if}}

{{#if err_msg}}
<div class="container mt-3">
    <div class="alert alert-danger" role="alert">
        {{err_msg}}
    </div>
</div>
{{/if}}